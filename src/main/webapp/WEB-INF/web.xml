<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
   version="6.0">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    
    <!-- URL Mappings for Servlet Pages -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <jsp-file>/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Register</servlet-name>
        <jsp-file>/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <jsp-file>/account.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    
    <!-- URL Mappings for Views Pages -->
    <servlet>
        <servlet-name>ViewBusesServlet</servlet-name>
        <jsp-file>/views/view_buses.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewBusesServlet</servlet-name>
        <url-pattern>/views/view-buses</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddBusServlet</servlet-name>
        <jsp-file>/views/add_bus.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBusServlet</servlet-name>
        <url-pattern>/views/add-bus</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>EditBusServlet</servlet-name>
        <jsp-file>/views/edit_bus.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>EditBusServlet</servlet-name>
        <url-pattern>/views/edit-bus</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>BuyTicketServlet</servlet-name>
        <jsp-file>/views/buy_ticket.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>BuyTicketServlet</servlet-name>
        <url-pattern>/views/buy-ticket</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MyTicketsServlet</servlet-name>
        <jsp-file>/views/my_tickets.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyTicketsServlet</servlet-name>
        <url-pattern>/views/my-tickets</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>TicketServlet</servlet-name>
        <jsp-file>/views/ticket.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>TicketServlet</servlet-name>
        <url-pattern>/views/ticket</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <jsp-file>/views/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/views/profile</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ManageAccountsServlet</servlet-name>
        <jsp-file>/views/manage_accounts.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageAccountsServlet</servlet-name>
        <url-pattern>/views/manage-accounts</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ChangePassServlet</servlet-name>
        <jsp-file>/views/change_password.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePassServlet</servlet-name>
        <url-pattern>/views/change-password</url-pattern>
    </servlet-mapping>
    
</web-app>
